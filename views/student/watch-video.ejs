    }

    /* تم استبدال أنماط مشغل الفيديو بملف CSS خارجي */

    @media (max-width: 768px) {
      .header h1 {
        font-size: 18px;
      }

      .video-title {
        font-size: 20px;
      }

      .video-actions {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>🎬 مشاهدة الدرس</h1>
    <div class="student-info">
      <span>مرحباً، <strong><%= studentName %></strong></span>
    </div>
  </div>

  <div class="container">
    <div class="video-container">
      <!-- مشغل الفيديو الآمن -->
      <div id="secureVideoPlayer" class="secure-player-container"></div>
    </div>

    <div class="video-info">
      <h2 class="video-title"><%= lesson.title %></h2>
      <div class="video-meta">
        <%
          let gradeText = '';
          if (lesson.grade === 1) gradeText = 'أولى إعدادي';
          else if (lesson.grade === 2) gradeText = 'ثانية إعدادي';
          else if (lesson.grade === 3) gradeText = 'ثالثة إعدادي';
          else if (lesson.grade === 4) gradeText = 'أولى ثانوي';
          else if (lesson.grade === 5) gradeText = 'ثانية ثانوي';
          else if (lesson.grade === 6) gradeText = 'ثالثة ثانوي';
          else gradeText = 'جميع المراحل';
        %>
        <span class="video-meta-item">📚 السنة الدراسية: <%= lesson.grade %></span>
        <span class="video-meta-item">🔢 رقم الدرس: <%= lesson.id %></span>
        <span class="video-meta-item">📂 الشهر: <%= lesson.monthId %></span>
      </div>

      <div class="video-description-container">
        <h3 class="video-description-title">وصف الدرس:</h3>
        <p class="video-description"><%= lesson.description %></p>
      </div>

      <% if (lesson.url) { %>
        <div class="video-source">
          <h3 class="video-source-title">مصدر الفيديو:</h3>
          <a href="<%= lesson.url %>" target="_blank" class="video-source-link"><%= lesson.url %></a>
        </div>
      <% } %>

      <div class="video-actions">
        <a href="/student/months/<%= lesson.monthId %>" class="video-btn back-btn">العودة إلى الشهر</a>

        <% if (lesson.pdf && lesson.pdf.trim() !== '') { %>
          <a href="/student/download-pdf/<%= lesson.id %>" class="video-btn pdf-btn">تحميل الملف 📄</a>
        <% } %>

        <% if (lesson.exams && lesson.exams.trim() !== '') { %>
          <a href="/student/take-exam/<%= lesson.id %>" class="video-btn exam-btn">الاختبار 📝</a>
        <% } %>
      </div>
    </div>
  </div>
  <!-- إضافة مكتبات التشفير وتشويش الكود -->
  <script src="/js/crypto-utils.js"></script>
  <script src="/js/obfuscator.js"></script>
  <script src="/js/secure-player.js"></script>

  <!-- تشغيل الفيديو بطريقة آمنة -->
  <script>
    // تشويش الكود لمنع التلاعب
    (function() {
      // متغيرات مشفرة
      const _0x5f8e9d = Math.random().toString(36).substring(2, 15);
      const _0x3c2b1a = { secure: true, key: window.location.hostname };
      const _0x7f8e9d = new Date().getTime();

      // إنشاء مشغل الفيديو الآمن
      document.addEventListener('DOMContentLoaded', function() {
        try {
          // إنشاء مشغل الفيديو
          const player = new SecureVideoPlayer('secureVideoPlayer');

          // تخزين مرجع للمشغل في متغير مخفي
          window['_' + _0x5f8e9d] = player;

          // تحميل الفيديو
          player.loadVideo(<%= lesson.id %>);

          // إضافة مستمع لإغلاق الصفحة
          window.addEventListener('beforeunload', function() {
            // تدمير المشغل وتنظيف الموارد
            if (player && typeof player.destroy === 'function') {
              player.destroy();
            }

            // مسح المتغيرات
            window['_' + _0x5f8e9d] = null;
          });

          // إضافة مستمع للتبديل بين علامات التبويب
          document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
              // تسجيل محاولة التبديل
              navigator.sendBeacon('/student/security/tamper-attempt', JSON.stringify({
                reason: 'Tab switched',
                timestamp: new Date().toISOString(),
                url: window.location.href
              }));
            }
          });

          // منع النسخ
          document.addEventListener('copy', function(e) {
            e.preventDefault();
            return false;
          });

          // منع الطباعة
          window.addEventListener('beforeprint', function(e) {
            e.preventDefault();
            alert('الطباعة غير مسموح بها');
            return false;
          });
        } catch (error) {
          console.error('خطأ في تهيئة المشغل:', error);
        }
      });

      // كود مضاد للتصحيح
      setInterval(function() {
        const start = new Date();
        debugger;
        const end = new Date();
        if (end - start > 100) {
          // تسجيل محاولة التلاعب
          navigator.sendBeacon('/student/security/tamper-attempt', JSON.stringify({
            reason: 'Debugger detected',
            timestamp: new Date().toISOString(),
            url: window.location.href
          }));
        }
      }, 1000);
    })();
  </script>

  <!-- منع النسخ من المصدر -->
  <script>
    // تعطيل وظائف النسخ
    Object.defineProperty(window, 'clipboardData', {
      get: function() {
        return {
          setData: function() {
            return false;
          },
          getData: function() {
            return '';
          }
        };
      }
    });
  </script>
</body>
